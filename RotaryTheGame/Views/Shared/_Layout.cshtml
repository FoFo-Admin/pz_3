<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - RotaryTheGame</title>
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/text.css">
    <link rel="stylesheet" href="~/css/div.css">
    <link rel="stylesheet" href="~/css/section.css">
    <link rel="stylesheet" href="~/css/form.css">
    <link rel="stylesheet" href="~/css/footer.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
</head>
<body>
    <header>
        <nav>
            <div id="header-div-logo">
                <div class="inline-block-div">
                    <div id="logo-image-div">
                        <img src="/images/small-logo.svg" alt="Play 'Rotary: The Game' online">
                    </div>
                </div>
                <!--
                -->
                <div class="inline-block-div">
                    <div id="logo-text-div">
                        <p id="logo-text">Rotary: The Game</p>
                    </div>
                </div>
            </div>
            <div id="header-div-buttons">
                <div class="inline-block-div">
                    <div class="header-text-div">
                        <p class="header-text">Правила</p>
                    </div>
                </div>
                <!--
                -->
                <div class="inline-block-div button-margin">
                    <div class="header-text-div">
                        <p class="header-text">Підтримати авторів</p>
                    </div>
                </div>
                <!--
                -->
                <div class="inline-block-div button-margin">
                    <div class="inline-block-div">
                        <div class="center-image-div">
                            <svg width="15" height="6" viewBox="0 0 15 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M7.76581 5.96297C7.63918 5.96297 7.52311 5.94827 7.41759 5.91887C7.31207 5.88947 7.20655 5.83803 7.10103 5.76453L0.83308 1.39904C0.664246 1.28145 0.585106 1.12345 0.595658 0.925014C0.60621 0.726582 0.695903 0.568572 0.864736 0.450983C1.07578 0.303997 1.30265 0.241528 1.54535 0.263576C1.78804 0.285624 2.00436 0.355442 2.1943 0.473031L7.76581 4.35347L13.3373 0.473031C13.5062 0.355442 13.733 0.289298 14.0179 0.2746C14.3028 0.259901 14.5297 0.326045 14.6985 0.473031C14.9096 0.59062 14.9993 0.744955 14.9676 0.936038C14.936 1.12712 14.8357 1.2888 14.6669 1.42109L8.43059 5.76453C8.32507 5.83803 8.21955 5.88947 8.11403 5.91887C8.00851 5.94827 7.89243 5.96297 7.76581 5.96297Z" fill="#F7A81B" />
                            </svg>
                        </div>
                    </div>
                    <!--
                    -->
                    <div class="inline-block-div">
                        <div class="header-text-div">
                            <p class="header-text">UA</p>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>


    @RenderBody()


    <footer>
        <div id="footer-div">
            <div id="footer-div-logo">
                <div id="logo-image-div">
                    <img src="/images/Shpak.svg" alt="Rotaract club 'Kharkiv Shpak'">
                </div>
            </div>
            <div id="footer-div-buttons">
                <div class="inline-block-div">
                    <div class="center-image-div">
                        <img src="/images/Insta.svg" alt="Instagram">
                    </div>
                </div>
                <!--
                -->
                <div class="inline-block-div button-footer-margin">
                    <div class="center-image-div">
                        <img src="/images/Facebook.svg" alt="Facebook">
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
